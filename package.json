{
  "name": "project",
  "version": "0.1.0",
  "description": "SASS compile|autoprefix|minimize and live-reload dev server using Browsersync for static HTML",
  "main": "public/index.php",
  "author": "5t3ph",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYKOPRO/PHP-Project"
  },
  "license": "MIT",
  "keywords": [
    "SASS",
    "Browsersync",
    "autoprefixer",
    "static HTML"
  ],
  "scripts": {
    "build:sass": "sass --no-source-map src/sass:public/css",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:index": "copyfiles -u 1 ./src/index.php public",
    "copy:php": "copyfiles -u 1 ./src/php/**/* public",
    "copy:project": "ncp . ../project_copy",
    "copy:script": "copyfiles -u 1 ./src/script/*.js public",
    "copy:sp": "npm-run-all --serial copy:script copy:project",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
    "watch:index": "onchange \"src/index.php\" -- npm run copy:index",
    "watch:php": "onchange \"src/php/**/*.php\" -- npm run copy:php",
    "watch:sass": "sass --no-source-map --watch src/sass/main.scss:public/css/main.css",
    "watch:script": "onchange \"src/script/*.js\" -- npm run copy:script",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch",
    "build": "npm-run-all copy:* build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "version": "npm outdated"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^6.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "sass": "^1.62.1"
  }
}
